---
import BaseLayout from './BaseLayout.astro';

const {
  title,
  blog_title,
  description,
  date
} = Astro.props;
---

<BaseLayout title={title}>
  <div class="blog-data">
    <div class="post-header">
      <h1 class="post-title">{blog_title}</h1>
      {description && (
        <p class="post-description">{description}</p>
      )}
      <p class="post-date"><em>Posted: {date.toDateString()}</em></p>
    </div>
    <div class="post-content">
      <slot />
    </div>
  </div>
</BaseLayout>
